<?xml version="1.0"?>
<psalm
    errorLevel="7"
    resolveFromConfigFile="true"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
>
    <projectFiles>
        <directory name="src" />
        <ignoreFiles>
            <directory name="vendor" />
            <directory name="src/Hydration/Templates/CircularBreaker.php" />
        </ignoreFiles>
    </projectFiles>

    <issueHandlers>
        <ParamNameMismatch errorLevel="suppress" /><!-- this fails if sub classes don't use the exact parameter name as their parent -->
    </issueHandlers>
</psalm>
